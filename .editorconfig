# top-most EditorConfig file
root = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 140

[*.sh]
indent_style = space
indent_size = 2

[*.{tf,tfvars}]
indent_size =  2
indent_style = space
insert_final_newline = true

[COMMIT_EDITMSG]
max_line_length = 0

[*.{yaml,yml}]
indent_size = 2
indent_style = space

[*.json]
indent_size = 4
indent_style = space

[Jenkinsfile]
indent_size = 2
indent_style = space

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

# Machine-generated files
[{*.scpt,*.plist,*.dot,*.db}]
trim_trailing_whitespace = false
insert_final_newline = none
indent_size = none

# Placeholder files
[{*.gitkeep,__init__.py}]
insert_final_newline = none

# Lexer restrictions
[{makefile*,Makefile*,*.mk,*.makefile,*.Makefile,GNUmakefile*,BSDmakefile,*.go,*.gitmodules}]
indent_style = tab

# Natural HTML nesting
[*.js]
quote_type = single

[*.erb]
indent_size = 2

[Vagrantfile]
indent_size = 2